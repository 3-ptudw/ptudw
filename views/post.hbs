                            <!-- Single Comment Area -->
                            {{#each this.comments}}
                            <li class="single_comment_area">
                                <!-- Comment Content -->
                                <div class="comment-content d-flex">
                                    <!-- Comment Author -->
                                    <div class="comment-author">
                                        <img src="{{avatar_url}}" alt="author">
                                    </div>
                                    <!-- Comment Meta -->
                                    <div class="comment-meta">
                                        <a class="post-author">{{name_user}}</a>
                                        <a class="post-date">{{formatTime time_comment "DD/MM/YYYY HH:mm"}}</a>
                                        <p>{{content_comment}}</p>
                                    </div>
                                </div>
                            </li>
