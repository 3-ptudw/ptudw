                        </ol>
                    </div>

                    {{#if isAuthenticated}}
                    <div class="post-a-comment-area">
                        {{!-- <h4 class="mb-70">Leave a comment</h4> --}}

                        <!-- Reply Form -->
                        <div class="contact-form-area">
                            <form action="/comment/post/{{this.post.id_post}}/{{this.post.url_post}}" method="POST">
                                <div class="row">
                                    <div class="col-12">
                                        <textarea name="content" class="form-control" id="content" cols="30"
                                            rows="10"></textarea>
                                    </div>
                                    <div class="col-12">
                                        <button class="btn viral-btn mt-30" type="submit">Gửi bình luận</button>
