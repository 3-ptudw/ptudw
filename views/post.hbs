{{#if this.error}}
<div class="alert alert-danger" role="alert">
    Invalid link. <a href="/" class="alert-link">Go back</a>.
</div>
{{else}}
<!-- ##### Viral News Breadcumb Area Start ##### -->
<div class="viral-news-breadcumb-area section-padding-50">
    <div class="container h-100">
        <div class="row h-100 align-items-center">

            <!-- Breadcumb Area -->
            <div class="col-12 col-md-12">
                <h3>{{this.post.title_post}}</h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a
                                href="/category/{{this.post.url_category}}">{{this.post.name_category}}</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{this.post.title_post}}</li>
                    </ol>
                </nav>
            </div>

            <!-- Add Widget -->
            {{!-- <div class="col-12 col-md-8">
                    <div class="add-widget">
                        <a href="#"><img src="/img/bg-img/add2.png" alt=""></a>
                    </div>
                </div> --}}
        </div>
    </div>
</div>
<!-- ##### Viral News Breadcumb Area End ##### -->

<!-- ##### Blog Area Start ##### -->
<div class="blog-area section-padding-100">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-11">
                <div class="blog-posts-area">

                    <!-- Single Featured Post -->
                    <div class="single-blog-post-details">
                        <div class="post-data">
                            <h2 class="post-title">
                                {{this.post.title_post}}
                            </h2>
                            <a href="/category/{{this.post.url_category}}"
                                class="post-catagory">{{this.post.name_category}}</a>
                            <div class="post-meta">

                                <!-- Post Details Meta Data -->
                                <div
                                    class="post-details-meta-data mb-50 d-flex align-items-center justify-content-between">
                                    <!-- Post Author & Date -->
                                    <div class="post-authors-date">
                                        <p class="post-author">Đăng bởi <a>{{this.post.name_user}}</a></p>
                                        <p class="post-date">{{formatTime this.post.posted_at "DD/MM/YYYY HH:mm"}}</p>
                                        <p class="post-author">Tag <a href="#">{{this.post.tag}}</a></p>
                                    </div>
                                    <!-- View Comments -->
                                    <div class="view-comments">
                                        <p class="views">{{this.post.count_views}} lượt xem</p>
                                        <a href="#comments" class="comments">{{this.post.count_comment}} bình luận</a>
                                    </div>
                                </div>

                                <div>
                                    {{{this.post.content_post}}}
                                </div>

                            </div>
                        </div>
                        <!-- Login with Facebook to post comments -->
                        {{#if isAuthenticated}}
                        {{else}}
                        <div class="login-with-facebook my-5">
                            <a href="/signin">Login to post comments</a>
                        </div>
                        {{/if}}
                    </div>

                    <!-- Comment Area Start -->
                    <div class="comment_area clearfix" id="comments">
                        <h4 class="title mb-70">{{this.post.count_comment}} comment</h4>

                        <ol>
