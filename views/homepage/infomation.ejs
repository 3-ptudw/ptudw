<!DOCTYPE html>
<html lang="en">

<head>
    <% include layout/header %>

</head>

<body>
    <% include layout/nav %>

        <!-- ##### Viral News Breadcumb Area Start ##### -->
        <div class="viral-news-breadcumb-area section-padding-50">
            <div class="container h-100">
                <div class="row h-100 align-items-center">

                    <!-- Breadcumb Area -->
                    <div class="col-12 col-md-4">
                        <h3> Thông tin cá nhân </h3>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/homepage">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Thông tin cá nhân</li>
                            </ol>
                        </nav>
                    </div>

                    <!-- Add Widget -->
                    <div class="col-12 col-md-8">
                        <div class="add-widget">
                            <a href="#"><img src="img/bg-img/add2.png" alt=""></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ##### Viral News Breadcumb Area End ##### -->

        <div class="viral-story-blog-post section-padding-0-50">

            <div class="catagory-featured-post section-padding-50">
            </div>

            <div class="container">
                <div class="row">
                    <div class="col-12 col-lg-12">
                        <div class="wrapper wrapper-content animated fadeInRight">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="ibox float-e-margins">
                                        <div class="ibox-title">
                                            <h5>Cập nhật thông tin cá nhân</h5>
                                        </div>
                                        <div class="ibox-content">
                                            <form class="form-horizontal" method="POST" action="" enctype="multipart/form-data">
                                                <input type="hidden" name="_token" id="csrf-token" value="{{ Session::token() }}" />

                                                <div class="form-group"><label class="col-lg-2 control-label">Họ tên</label>
                                                    <div class="col-lg-10">
                                                        <input type="text" name="name" class="form-control" value="NAT" required="">
                                                    </div>
                                                </div>

                                                <div class="form-group"><label class="col-lg-2 control-label">Bút danh</label>
                                                    <div class="col-lg-10">
                                                        <input type="text" name="name2" class="form-control" value="Tũn" required="">
                                                    </div>
                                                </div>

                                                <div class="form-group"><label class="col-lg-2 control-label">Email</label>
                                                    <div class="col-lg-10">
                                                        <input type="email" name="email" class="form-control" value="ntuan.2502@gmail.com" required="">
                                                    </div>
                                                </div>

                                                <div class="form-group"><label class="col-lg-2 control-label">Ngày tháng năm sinh</label>
                                                    <div class="col-lg-10">
                                                        <div class="input-group date">
                                                            <span class="input-group-addon"></span><input type="date" class="form-control">
                                                        </div>
                                                    </div>
                                                </div>


                                                <div class="form-group">
                                                    <div class="col-lg-12">
                                                        <button type="submit" class="btn btn-primary pull-right">Xác nhận</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="ibox float-e-margins">
                                        <div class="ibox-title">
                                            <h5>Đổi mật khẩu</h5>
                                        </div>
                                        <div class="ibox-content"></div>
                                        <form class="form-horizontal" method="POST" action="" enctype="multipart/form-data">
                                            <input type="hidden" name="_token" id="csrf-token" value="{{ Session::token() }}" />

                                            <div class="form-group"><label class="col-lg-2 control-label">Mật khẩu cũ</label>
                                                <div class="col-lg-10">
                                                    <input type="password" name="old_password" class="form-control" required="">
                                                </div>
                                            </div>

                                            <div class="form-group"><label class="col-lg-2 control-label">Mật khẩu mới</label>
                                                <div class="col-lg-10">
                                                    <input type="password" name="new_password" class="form-control" required="">
                                                </div>
                                            </div>

                                            <div class="form-group"><label class="col-lg-2 control-label">Xác nhận mật khẩu</label>
                                                <div class="col-lg-10">
                                                    <input type="password" name="retype_password" class="form-control" required="">
                                                </div>
                                            </div>


                                            <div class="form-group">
                                                <div class="col-lg-12">
                                                    <button type="submit" class="btn btn-primary pull-right">Xác nhận</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>

        <% include layout/footer %>

            <% include layout/script %>
</body>

</html>