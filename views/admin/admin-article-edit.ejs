<!DOCTYPE html>
<html>

<head>

    <% include layout/header %>

</head>

<body>

    <div id="wrapper">

        <% include layout/navbar %>

            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2>Cập nhật chuyên mục</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="#">Quản trị viên</a>
                        </li>
                        <li>
                            <a href="#">Chuyên mục</a>
                        </li>
                        <li class="active">
                            <strong>Cập nhật chuyên mục</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-lg-2">

                </div>
            </div>

            <div class="wrapper wrapper-content animated fadeInRight">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <h5>Cập nhật chuyên mục</h5>
                                <div class="ibox-tools">
                                    <a class="collapse-link">
                                        <i class="fa fa-chevron-up"></i>
                                    </a>
                                    <a class="close-link">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="ibox-content">
                                <form class="form-horizontal" method="POST" action="" enctype="multipart/form-data">
                                    <input type="hidden" name="_token" id="csrf-token" value="{{ Session::token() }}" />

                                    <div class="form-group"><label class="col-lg-2 control-label">Tên chuyên mục</label>
                                        <div class="col-lg-10">
                                            <input type="text" name="article" class="form-control" value="Phim ảnh" required="">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-lg-12">
                                            <button type="submit" class="btn btn-primary pull-right">Xác nhận</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <h5>Danh sách Bài viết</h5>
                                <div class="ibox-tools">
                                    <a class="collapse-link">
                                        <i class="fa fa-chevron-up"></i>
                                    </a>
                                    <a class="close-link">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="ibox-content">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover dataTables">
                                        <thead>
                                            <tr>
                                                <th>STT</th>
                                                <th>Bài viết</th>
                                                <th>Chuyên mục</th>
                                                <th>Trạng thái</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>1</td>
                                                <td>Những câu hỏi lớn 'Avengers: Endgame' phải trả lời</td>
                                                <td>Phim ảnh</td>
                                                <td><button class="btn btn-w-m btn-success">Đã được duyệt</button></td>
                                                <td>
                                                    <a href="admin-post-edit"><button class="btn btn-info " type="button"><i class="fa fa-paste"></i> Cập nhật</button></a>
                                                    <button class="btn btn-danger " type="button"><i class="fa fa-warning"></i> <span class="bold">Xóa</span></button>
                                                </td>
                                            </tr>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>STT</th>
                                                <th>Bài viết</th>
                                                <th>Chuyên mục</th>
                                                <th>Trạng thái</th>
                                                <th>Action</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% include layout/footer %>
    </div>
    </div>

    <% include layout/script %>

        <!-- Page-Level Scripts -->
        <script>
            $(document).ready(function() {
                $('.chosen-select').chosen({
                    width: "100%"
                });


            });
        </script>

</body>

</html>