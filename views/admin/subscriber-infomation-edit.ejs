<!DOCTYPE html>
<html>

<head>

    <% include layout/header %>

</head>

<body>

    <div id="wrapper">

        <% include layout/navbar %>

            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2>Cập nhật thông tin</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="#">Độc giả</a>
                        </li>
                        <li>
                            <a href="#">Thông tin</a>
                        </li>
                        <li class="active">
                            <strong>Thông tin cá nhân</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-lg-2">

                </div>
            </div>

            <div class="wrapper wrapper-content animated fadeInRight">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <h5>Cập nhật thông tin cá nhân</h5>
                                <div class="ibox-tools">
                                    <a class="collapse-link">
                                        <i class="fa fa-chevron-up"></i>
                                    </a>
                                    <a class="close-link">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="ibox-content">
                                <form class="form-horizontal" method="POST" action="" enctype="multipart/form-data">
                                    <input type="hidden" name="_token" id="csrf-token" value="{{ Session::token() }}" />

                                    <div class="form-group"><label class="col-lg-2 control-label">Họ tên</label>
                                        <div class="col-lg-10">
                                            <input type="text" name="name" class="form-control" value="NAT" required="">
                                        </div>
                                    </div>

                                    <div class="form-group"><label class="col-lg-2 control-label">Bút danh</label>
                                        <div class="col-lg-10">
                                            <input type="text" name="name2" class="form-control" value="Tũn" required="">
                                        </div>
                                    </div>

                                    <div class="form-group"><label class="col-lg-2 control-label">Email</label>
                                        <div class="col-lg-10">
                                            <input type="email" name="email" class="form-control" value="ntuan.2502@gmail.com" required="">
                                        </div>
                                    </div>

                                    <div class="form-group"><label class="col-lg-2 control-label">Ngày tháng năm sinh</label>
                                        <div class="col-lg-10">
                                            <div class="input-group date">
                                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="date" class="form-control" value="08/09/2014">
                                            </div>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="col-lg-12">
                                            <button type="submit" class="btn btn-primary pull-right">Xác nhận</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <h5>Đổi mật khẩu</h5>
                                <div class="ibox-tools">
                                    <a class="collapse-link">
                                        <i class="fa fa-chevron-up"></i>
                                    </a>
                                    <a class="close-link">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="ibox-content">
                                <form class="form-horizontal" method="POST" action="" enctype="multipart/form-data">
                                    <input type="hidden" name="_token" id="csrf-token" value="{{ Session::token() }}" />

                                    <div class="form-group"><label class="col-lg-2 control-label">Mật khẩu cũ</label>
                                        <div class="col-lg-10">
                                            <input type="password" name="old_password" class="form-control" required="">
                                        </div>
                                    </div>

                                    <div class="form-group"><label class="col-lg-2 control-label">Mật khẩu mới</label>
                                        <div class="col-lg-10">
                                            <input type="password" name="new_password" class="form-control" required="">
                                        </div>
                                    </div>

                                    <div class="form-group"><label class="col-lg-2 control-label">Xác nhận mật khẩu</label>
                                        <div class="col-lg-10">
                                            <input type="password" name="retype_password" class="form-control" required="">
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="col-lg-12">
                                            <button type="submit" class="btn btn-primary pull-right">Xác nhận</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% include layout/footer %>
    </div>
    </div>

    <% include layout/script %>

        <!-- Page-Level Scripts -->
        <script>
            $(document).ready(function() {
                $('.chosen-select').chosen({
                    width: "100%"
                });


            });
        </script>

</body>

</html>