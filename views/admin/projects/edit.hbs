<div class="card shadow">
  <h4 class="card-header">
    Edit Project
  </h4>
  <div class="card-body">
    {{#if this.error}}
    <div class="alert alert-danger" role="alert">
      Invalid projectId. <a href="/admin/projects" class="alert-link">Go back</a>.
    </div>
    {{else}}
    <form method="POST" action="/admin/projects/update">
      <div class="form-group">
        <label for="id">#</label>
        <input readonly type="text" class="form-control" id="id" name="id" value="{{this.project.id}}">
      </div>
      <div class="form-group">
        <label for="name">Category</label>
        <input type="text" class="form-control" id="name" name="name" autofocus placeholder="Enter category name"
          value="{{this.project.name}}">
      </div>
      <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-control">
          <option value="{{this.project.status}}">Hiện tại:
            {{#if this.project.status}}
            Đã duyệt
            {{else}}
            Chưa duyệt
            {{/if}}
          </option>
          <option value="0">Chưa duyệt</option>
          <option value="1">Đã duyệt</option>
        </select>
      </div>
      <a class="btn btn-primary" href="/admin/projects" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        List
      </a>
      <button type="submit" class="btn btn-success">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
    </form>
    {{/if}}
  </div>
</div>