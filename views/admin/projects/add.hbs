<div class="card shadow">
  <h4 class="card-header">
    New Project
  </h4>
  <div class="card-body">
    <form method="POST">
      <div class="form-group">
        <label for="txtName">Project</label>
        <input type="text" class="form-control" id="txtName" name="name" autofocus placeholder="Enter project name">
      </div>
      <a class="btn btn-primary" href="/admin/projects" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        List
      </a>
      <button type="submit" class="btn btn-success">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
    </form>
  </div>
</div>