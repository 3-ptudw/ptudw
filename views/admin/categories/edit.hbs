<div class="card shadow">
  <h4 class="card-header">
    Edit Category
  </h4>
  <div class="card-body">
    {{#if this.error}}
    <div class="alert alert-danger" role="alert">
      Invalid categoryId. <a href="/admin/categories" class="alert-link">Go back</a>.
    </div>
    {{else}}
    <form method="POST" action="/admin/categories/update">
      <div class="form-group">
        <label for="id">#</label>
        <input readonly type="text" class="form-control" id="id" name="id" value="{{this.category.id}}">
      </div>
      <div class="form-group">
        <label for="name">Category</label>
        <input type="text" class="form-control" id="name" name="name" autofocus placeholder="Enter category name"
          value="{{this.category.name}}">
      </div>

      <div class="form-group">
        <input type="hidden" placeholder="" name="url" class="form-control" value="{{this.category.url}}">
      </div>

      <div class="form-group">
        <label for="id_project">Project</label>
        <select name="id_project" id="id_project" class="form-control">
          <option value="{{this.category.id_project}}" selected>Hiện tại: {{this.category.id_project}}</option>
          {{#each this.projects}}
          {{!-- {{#if id}}
          {{/if}} --}}
          <option value="{{id}}">{{id}}: {{name}}</option>
          {{/each}}
        </select>
      </div>

      <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-control">
          <option value="{{this.category.status}}">Hiện tại:
            {{#if this.category.status}}
            Đã duyệt
            {{else}}
            Chưa duyệt
            {{/if}}
          </option>
          <option value="0">Chưa duyệt</option>
          <option value="1">Đã duyệt</option>
        </select>
      </div>
      <a class="btn btn-primary" href="/admin/categories" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        List
      </a>
      <button type="submit" class="btn btn-success">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
    </form>
    {{/if}}
  </div>
</div>