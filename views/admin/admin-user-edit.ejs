<!DOCTYPE html>
<html>

<head>

    <% include layout/header %>

</head>

<body>

    <div id="wrapper">

        <% include layout/navbar %>

            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2>Cập nhật thông tin người dùng</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="#">Quản trị viên</a>
                        </li>
                        <li>
                            <a href="#">Người dùng</a>
                        </li>
                        <li class="active">
                            <strong>Cập nhật thông tin người dùng</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-lg-2">

                </div>
            </div>

            <div class="wrapper wrapper-content animated fadeInRight">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <h5>Cập nhật thông tin người dùng</h5>
                                <div class="ibox-tools">
                                    <a class="collapse-link">
                                        <i class="fa fa-chevron-up"></i>
                                    </a>
                                    <a class="close-link">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="ibox-content">
                                <form class="form-horizontal" method="POST" action="" enctype="multipart/form-data">
                                    <input type="hidden" name="_token" id="csrf-token" value="{{ Session::token() }}" />
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Quyền hạn</label>
                                        <div class="col-lg-10">
                                            <select name="role" id="role" tabindex="4" required="">
                                                        <option value="3">Quản trị viên</option>
                                                        <option value="2">Phóng viên</option>
                                                        <option value="1">Biên tập viên</option>
                                                        <option value="0" selected>Người dùng</option>
                                                    </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Chuyên mục</label>
                                        <div class="col-lg-10">
                                            <select name="article" id="article" tabindex="4" required="">
                                                    <option value="phim-anh" selected>Phim ảnh</option>
                                                    <option value="cong-nghe">Công nghệ</option>
                                                    <option value="xuat-ban">Xuất bản</option>
                                            </select>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="col-lg-12">
                                            <button type="submit" class="btn btn-primary pull-right">Xác nhận</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <h5>Gia hạn tài khoản</h5>
                                <div class="ibox-tools">
                                    <a class="collapse-link">
                                        <i class="fa fa-chevron-up"></i>
                                    </a>
                                    <a class="close-link">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="ibox-content">
                                <form class="form-horizontal" method="POST" action="" enctype="multipart/form-data">
                                    <input type="hidden" name="_token" id="csrf-token" value="{{ Session::token() }}" />

                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Gia hạn theo mốc thời gian</label>
                                        <div class="col-lg-10">
                                            <select name="datetime" id="datetime" tabindex="4" required="">
                                                        <option value="7" selected>7 ngày</option>
                                                        <option value="30">30 ngày</option>
                                                        <option value="90">90 ngày</option>
                                                        <option value="180">180 ngày</option>
                                                        <option value="365">365 ngày</option>
                                                </select>
                                        </div>
                                    </div>

                                    <div class="form-group"><label class="col-lg-2 control-label">Gia hạn tới ngày</label>
                                        <div class="col-lg-10">
                                            <div class="input-group date">
                                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="date" name="date" class="form-control" value="08/09/2014">
                                            </div>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="col-lg-12">
                                            <button type="submit" class="btn btn-primary pull-right">Xác nhận</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% include layout/footer %>
    </div>
    </div>

    <% include layout/script %>

        <!-- Page-Level Scripts -->
        <script>
            $(document).ready(function() {
                $('.chosen-select').chosen({
                    width: "100%"
                });


            });
        </script>

</body>

</html>