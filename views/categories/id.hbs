<div class="card shadow">
  <h4 class="card-header">
    Categories
  </h4>
  <div class="card-body">
    <div class="row">
      {{#each this.categories}}
      <div class="col-sm-4 mb-3">
        <div class="card h-100 shadow-sm">
          <img src="/imgs/sp/{{id}}/main_thumbs.jpg" alt="{{name}}" title="{{name}}" class="card-img-top">
          <div class="card-body">
            <h6 class="card-title">{{name}}</h6>
            <h5 class="card-title text-danger"></h5>
            <p class="card-text"></p>
          </div>
          <div class="card-footer">
            <a class="btn btn-outline-primary" href="javascript:;">
              <i class="fa fa-eye" aria-hidden="true"></i>
              Details
            </a>
            <a class="btn btn-outline-success" href="javascript:;">
              <i class="fa fa-shopping-cart" aria-hidden="true"></i>
              Add to cart
            </a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    <div class="row">
      <div class="col-sm-12">
        <nav aria-label="...">
          <ul class="pagination">
            <li class="page-item disabled">
              <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
            </li>
            {{#each this.pages}}
            {{#if active}}
            <li class="page-item active" aria-current="page">
              <a class="page-link" href="javascript:;">{{value}} <span class="sr-only">(current)</span></a>
            </li>
            {{else}}
            <li class="page-item">
              <a class="page-link" href="?page={{value}}">{{value}}</a>
            </li>
            {{/if}}
            {{/each}}
            <li class="page-item">
              <a class="page-link" href="#">Next</a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>