<div class="blog-area section-padding-100">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-12">
                <div class="blog-posts-area">

                    <form novalidate action="" method="POST" id="profileForm">
                        <div class="form-group row">
                            <label for="username" class="col-sm-2 col-form-label">Email</label>
                            <div class="col-sm-10">
                                <input type="text" readonly class="form-control-plaintext" name="username" id="username"
                                    value="{{user_profile.username}}">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="name" class="col-sm-2 col-form-label">Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="name" id="name" placeholder="Name"
                                    value="{{user_profile.name}}">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="other_name" class="col-sm-2 col-form-label">Other name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="other_name" id="other_name"
                                    placeholder="Other name" value="{{user_profile.other_name}}">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="date_of_birth" class="col-sm-2 col-form-label">Date of Birth</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="date_of_birth" id="date_of_birth"
                                    value="{{moment user_profile.date_of_birth format="DD/MM/YYYY HH:mm"}}">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="avatar" class="col-sm-2 col-form-label">Avatar Link</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="avatar" id="avatar"
                                    value="{{user_profile.avatar}}">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="premium" class="col-sm-2 col-form-label">Loại tài khoản</label>
                            <div class="col-sm-10">
                                <input type="text" readonly class="form-control-plaintext" name="premium" id="premium"
                                    value="{{moment user_profile.premium format="DD/MM/YYYY HH:mm"}}">
                            </div>
                        </div>

                        <a href="/changepassword" class="btn btn-primary">Đổi mật khẩu</a>
                        <button type="submit" class="btn btn-primary pull-right">Xác nhận</button>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>